<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="143.3dp"
    android:layout_height="207.3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="24dp"
    app:cardElevation="0dp"
    android:id="@+id/route_Container"
    >

    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="143.2dp"
            android:id="@+id/route_Image_Container">

            <com.iguideu.custom_view.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/profile_image_test"
                android:id="@+id/route_image"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.1dp"
            android:layout_below="@+id/route_Image_Container"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/route_title_TextView"
                android:textSize="11.7sp"
                android:textColor="@color/Route_Title_Color"
                android:gravity="center_horizontal"
                android:text = "이것은 제목입니다."
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.7dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/route_title_TextView"

                >

                <ImageView
                    android:layout_width="12.3dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="9.7dp"
                    android:background="@mipmap/star_solid"
                    android:id="@+id/rating_star_0"
                    />
                <ImageView
                    android:layout_width="12.3dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="9.7dp"
                    android:background="@mipmap/star_solid"
                    android:id="@+id/rating_star_1"
                    />
                <ImageView
                    android:layout_width="12.3dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="9.7dp"
                    android:background="@mipmap/star_solid"
                    android:id="@+id/rating_star_2"
                    />
                <ImageView
                    android:layout_width="12.3dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="9.7dp"
                    android:background="@mipmap/star_blank"
                    android:id="@+id/rating_star_3"
                    />
                <ImageView
                    android:layout_width="12.3dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/star_blank"
                    android:id="@+id/rating_star_4"
                    />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>