<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_layout2"
        android:id="@+id/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="닉네임을 설정하세요."
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="47dp"
        android:gravity="center_horizontal"
        android:textColor="@color/Color_All_Primary_Text"
        android:textSize="18.3sp"
        android:id="@+id/nick_Comment"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nick_Comment"
        android:id="@+id/guider_nick_EditText"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:textSize="18.3sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="51.8dp"
        android:background="@color/IGU_Point_Color"
        android:text="다음"
        android:textColor="@color/Color_White"
        android:textSize="18.3sp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>