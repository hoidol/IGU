<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/guide_schedule_toolbar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/guide_schedule_toolbar"
        android:gravity="center_vertical">
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:id="@+id/guide_schedule_CalendarView"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="@color/IGU_Point_Color"
            app:mcv_calendarMode="month"
            app:mcv_titleAnimationOrientation="horizontal"
            app:mcv_firstDayOfWeek="monday"
            />
    </RelativeLayout>



</RelativeLayout>