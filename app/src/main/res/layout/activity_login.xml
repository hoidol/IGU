<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_Base_Point">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:layout_width="213.3dp"
            android:layout_height="49.9dp"
            android:background="@drawable/base_btn"
            android:text="로그인 / 회원가입"
            android:textSize="16.7sp"
            android:textColor="@color/Color_White"
            android:textAlignment="center"
            android:id="@+id/login_btn_login"
            android:onClick="LoginClick"
            />
        <Button
            android:layout_width="213.3dp"
            android:layout_height="49.9dp"
            android:background="@drawable/base_btn"
            android:text="GOOGLE Sign"
            android:textSize="16.7sp"
            android:layout_marginTop="26.1dp"
            android:textColor="@color/Color_White"
            android:textAlignment="center"
            android:textStyle="normal"
            android:id="@+id/login_btn_google"
            android:onClick="LoginClick"
            />
    </LinearLayout>

</RelativeLayout>