<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">
    <RelativeLayout
        android:layout_width="280.3dp"
        android:layout_height="280.5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_check_route_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="71.7dp"
            android:id="@+id/dialog_check_TextView"
            android:textSize="18.3sp"
            android:text="2017년 8월 31일 김은진님이\n가이드를 요청하셨습니다."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51.8dp"
            android:orientation="horizontal"
            android:layout_above="@+id/message_Btn">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/IGU_Point_Color"
                android:layout_weight="1"
                android:text="@string/dialog_Y_Btn"
                android:textSize="18.3dp"
                android:textColor="@color/Color_White"
                android:id="@+id/dialog_Y_Btn"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/IGU_Point_Color"
                android:textSize="18.3dp"
                android:textColor="@color/Color_White"
                android:layout_weight="1"
                android:text="@string/dialog_N_Btn"
                android:id="@+id/dialog_N_Btn"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="51.8dp"
            android:id="@+id/message_Btn"
            android:background="@color/IGU_Point_Color"
            android:textSize="18.3dp"
            android:textColor="@color/Color_White"
            android:text="메세지보내기"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>