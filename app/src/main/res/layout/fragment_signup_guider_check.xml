<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_Base_Point"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup_guider_check_comment"
        android:textSize="18.3sp"
        android:textColor="@color/Color_White"
        android:layout_centerHorizontal="true"
        android:id="@+id/signup_guider_check_comment"
        android:gravity="center_horizontal"
        android:layout_marginTop="214dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    <Button
        android:layout_width="156.7dp"
        android:layout_height="51.8dp"
        android:background="@drawable/check_btn_bg"
        android:id="@+id/signup_Yes_Btn"
        android:text="@string/signup_Yes_Btn"
        android:textColor="@color/Color_Base_Point"
        android:textSize="16.7sp"
        android:layout_marginBottom="14.5dp"/>
    <Button
        android:layout_width="156.7dp"
        android:layout_height="51.8dp"
        android:background="@drawable/check_btn_bg"
        android:id="@+id/signup_No_Btn"
        android:text="@string/signup_No_Btn"
        android:textColor="@color/Color_Base_Point"
        android:textSize="16.7sp"
        android:layout_toRightOf="@id/signup_Yes_Btn"
        android:layout_marginLeft="13.7dp"
        android:layout_marginBottom="14.5dp"/>
    </LinearLayout>

</RelativeLayout>