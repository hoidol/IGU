<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/inbox_title_TextView"
        android:layout_width="match_parent"
        android:layout_height="24.7dp"
        android:layout_marginTop="9.3dp"
        android:gravity="center_horizontal"
        android:text="@string/inbox_title_kr"
        android:textSize="16.7dp"
        android:textColor="@color/Color_All_Primary_Text"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inbox_RecyclerView"
        android:layout_below="@+id/inbox_title_TextView"
        android:layout_marginBottom="78.3dp"

        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>